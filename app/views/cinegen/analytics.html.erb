<script>
document.addEventListener('DOMContentLoaded', function() {
  // Analytics actions
  document.querySelectorAll('.analytics-btn').forEach(btn => {
    btn.addEventListener('click', function() {
      const action = this.textContent.trim();
      if (action.includes('Generate Report')) {
        alert('📈 Analytics report generation started!');
      } else if (action.includes('Export Data')) {
        alert('📊 Data export initiated!');
      } else if (action.includes('Set Goals')) {
        alert('🎯 Goal setting interface would open here!');
      } else if (action.includes('Email Summary')) {
        alert('📧 Email summary will be sent!');
      }
    });
  });

  // Animate trend points
  setTimeout(() => {
    document.querySelectorAll('.trend-point').forEach((point, index) => {
      setTimeout(() => {
        point.style.animation = 'pulse 2s infinite';
      }, index * 200);
    });
  }, 1000);
});
</script>