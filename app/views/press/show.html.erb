<div class="min-h-screen bg-gray-900">
  <!-- Article Header -->
  <section class="relative py-20 overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-<%= @article[:color] %>-900/20 via-indigo-900/20 to-purple-900/20"></div>
    <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-black/40"></div>
    
    <div class="container mx-auto px-6 relative z-10">
      <div class="max-w-4xl mx-auto">
        <!-- Breadcrumb -->
        <nav class="mb-8">
          <ol class="flex items-center gap-2 text-sm text-gray-400">
            <li><a href="/press" class="hover:text-white transition-colors">Press</a></li>
            <li>→</li>
            <li class="text-white"><%= @article[:publication] %></li>
          </ol>
        </nav>
        
        <div class="flex items-center gap-6 mb-8">
          <div class="w-20 h-20 bg-gradient-to-br from-<%= @article[:color] %>-400 to-<%= @article[:color] %>-600 rounded-2xl flex items-center justify-center">
            <span class="text-3xl font-bold text-white"><%= @article[:logo] %></span>
          </div>
          <div>
            <h1 class="text-4xl lg:text-5xl font-bold text-white mb-2"><%= @article[:publication] %></h1>
            <div class="flex items-center gap-4 text-sm text-gray-400">
              <span><%= @article[:date] %></span>
              <span>•</span>
              <span>By <%= @article[:author] %></span>
              <span>•</span>
              <span class="px-3 py-1 bg-<%= @article[:color] %>-600/20 text-<%= @article[:color] %>-400 rounded-full">
                <%= @article[:badge] %>
              </span>
            </div>
          </div>
        </div>
        
        <h2 class="text-3xl lg:text-4xl font-bold text-white mb-6"><%= @article[:title] %></h2>
        <p class="text-xl text-gray-300 leading-relaxed"><%= @article[:excerpt] %></p>
      </div>
    </div>
  </section>

  <!-- Article Content -->
  <section class="py-20">
    <div class="container mx-auto px-6">
      <div class="max-w-4xl mx-auto">
        <div class="prose prose-invert prose-lg max-w-none">
          <% @article[:content].each do |block| %>
            <% if block[:type] == 'paragraph' %>
              <p class="text-gray-300 mb-6 leading-relaxed"><%= block[:text] %></p>
            <% elsif block[:type] == 'quote' %>
              <blockquote class="border-l-4 border-<%= @article[:color] %>-500 pl-6 py-4 mb-8 bg-<%= @article[:color] %>-600/10 rounded-r-lg">
                <p class="text-xl text-gray-200 italic mb-4">"<%= block[:text] %>"</p>
                <cite class="text-<%= @article[:color] %>-400 font-medium">— <%= block[:author] %></cite>
              </blockquote>
            <% end %>
          <% end %>
        </div>
        
        <!-- Article Tags -->
        <div class="mt-12 pt-8 border-t border-gray-700">
          <h3 class="text-lg font-bold text-white mb-4">Topics</h3>
          <div class="flex flex-wrap gap-3">
            <% @article[:tags].each do |tag| %>
              <span class="px-4 py-2 bg-gray-800 text-gray-300 rounded-full text-sm">
                <%= tag %>
              </span>
            <% end %>
          </div>
        </div>
        
        <!-- Article Rating -->
        <div class="mt-8 p-6 bg-<%= @article[:color] %>-600/10 border border-<%= @article[:color] %>-600/30 rounded-xl">
          <div class="flex items-center justify-between">
            <div>
              <h4 class="text-lg font-bold text-white mb-2">Article Rating</h4>
              <div class="flex items-center gap-2">
                <% @article[:rating].times do %>
                  <span class="text-yellow-400 text-xl">★</span>
                <% end %>
                <span class="text-gray-300 ml-2"><%= @article[:rating] %>/5</span>
              </div>
            </div>
            <div class="text-right">
              <div class="text-<%= @article[:color] %>-400 font-medium"><%= @article[:badge] %></div>
              <div class="text-sm text-gray-400"><%= @article[:publication] %> Rating</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Related Articles -->
  <section class="py-20 border-t border-gray-800">
    <div class="container mx-auto px-6">
      <div class="max-w-6xl mx-auto">
        <h2 class="text-3xl font-bold text-white text-center mb-12">More Press Coverage</h2>
        
        <div class="text-center">
          <a href="/press" class="inline-flex items-center px-8 py-4 bg-<%= @article[:color] %>-600 hover:bg-<%= @article[:color] %>-700 text-white font-medium rounded-xl transition-colors">
            View All Press Coverage
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>
</div>