      50% { transform: scale(1.1); }
    }

    .agent-title {
      font-size: 3rem;
      font-weight: bold;
      background: linear-gradient(45deg, #00d4ff, #ff0096, #00ff64);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
