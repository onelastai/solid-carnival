  <script>
    // Primary Menu Functions
    function togglePrimaryMenu() {
      const primaryMenu = document.getElementById('primary-menu');
      const contentCrafterNav = document.getElementById('contentcrafter-nav');
      const isActive = primaryMenu.classList.contains('active');
      
      if (!isActive) {
        // Opening primary menu - hide agent menu behind it
        primaryMenu.classList.add('active');
        contentCrafterNav.classList.add('hidden-behind-primary');
        // Close agent menu if open
        document.getElementById('contentcrafter-menu').classList.remove('active');
      } else {
        // Closing primary menu - show agent menu again
        primaryMenu.classList.remove('active');
        contentCrafterNav.classList.remove('hidden-behind-primary');
      }
    }

    // ContentCrafter Navigation Functions
    function toggleContentCrafterMenu() {
      const menu = document.getElementById('contentcrafter-menu');
      const primaryMenuDropdown = document.getElementById('primary-menu');
      
      // Don't open if primary menu is active
      if (primaryMenuDropdown.classList.contains('active')) {
        return;
      }
      
      menu.classList.toggle('active');
    }

    // Close menus when clicking outside
    document.addEventListener('click', function(e) {
      const primaryMenu = document.querySelector('.primary-menu');
      const contentCrafterNav = document.querySelector('.contentcrafter-nav');
      
      // Handle primary menu
      if (!primaryMenu.contains(e.target)) {
        const primaryDropdown = document.getElementById('primary-menu');
        const contentCrafterNavElement = document.getElementById('contentcrafter-nav');
        
        if (primaryDropdown.classList.contains('active')) {
          primaryDropdown.classList.remove('active');
          contentCrafterNavElement.classList.remove('hidden-behind-primary');
        }
      }
      
      // Handle ContentCrafter menu
      if (!contentCrafterNav.contains(e.target)) {
        document.getElementById('contentcrafter-menu').classList.remove('active');
      }
    });

    // Primary Menu Item Functions
    function goToHome() {
      window.location.href = '/';
    }

    function goToAgents() {
      window.location.href = '/';
    }

    function goToProfile() {
      alert('üîú Profile page coming soon!');
    }

    // Chat functionality
    function startContentChat() {
      document.getElementById('content-chat-modal').style.display = 'block';
      document.getElementById('content-input').focus();
      toggleContentCrafterMenu(); // Close dropdown
    }

    function closeContentChat() {
      document.getElementById('content-chat-modal').style.display = 'none';
    }

    function sendContentMessage() {
      const input = document.getElementById('content-input');
      const sendButton = document.getElementById('send-button');
      const message = input.value.trim();
      
      if (!message) return;
      
      // Add user message to chat
      addMessageToChat('user', message);
      
      // Clear input and disable
      input.value = '';
      input.disabled = true;
      sendButton.disabled = true;
      sendButton.textContent = 'Creating...';
      
      // Show typing indicator
      showTypingIndicator(true);
      
      // Send to ContentCrafter AI
      fetch('/contentcrafter/chat', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').getAttribute('content')
        },
        body: JSON.stringify({ message: message })
      })
      .then(response => response.json())
      .then(data => {
        // Hide typing indicator
        showTypingIndicator(false);
        
        // Add AI response
        if (data.response) {
          addMessageToChat('ai', data.response);
        } else {
          addMessageToChat('ai', 'I apologize, but I encountered an issue generating your content. Please try again.');
        }
      })
      .catch(error => {
        console.error('Error:', error);
        showTypingIndicator(false);
        addMessageToChat('ai', 'Sorry, I encountered a technical issue. Please try again.');
      })
      .finally(() => {
        // Re-enable input
        input.disabled = false;
        sendButton.disabled = false;
        sendButton.textContent = 'Create';
        input.focus();
      });
    }

    function addMessageToChat(sender, message) {
      const messagesDiv = document.getElementById('chat-messages');
      const messageDiv = document.createElement('div');
      
      messageDiv.className = `message ${sender}`;
      
      const senderIcon = sender === 'user' ? 'üë§' : 'üåå';
      const senderName = sender === 'user' ? 'You' : 'ContentCrafter';
      
      messageDiv.innerHTML = `
        <div class="message-header">
          ${senderIcon} ${senderName}
        </div>
        <div class="message-content">${escapeHtml(message)}</div>
      `;
      
      messagesDiv.appendChild(messageDiv);
      messagesDiv.scrollTop = messagesDiv.scrollHeight;
    }

    function showTypingIndicator(show) {
      const indicator = document.getElementById('typing-indicator');
      if (show) {
        indicator.classList.add('active');
      } else {
        indicator.classList.remove('active');
      }
    }

    function escapeHtml(text) {
      const div = document.createElement('div');
      div.textContent = text;
      return div.innerHTML;
    }

