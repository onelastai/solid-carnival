  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    body {
      font-family: 'JetBrains Mono', 'Courier New', monospace;
      background: linear-gradient(135deg, #0d1b2a 0%, #1b263b 25%, #415a77 50%, #1b263b 75%, #0d1b2a 100%);
      color: #a8dadc;
      min-height: 100vh;
      overflow-x: hidden;
      position: relative;
      animation: backgroundShift 25s ease-in-out infinite;
    }

    @keyframes backgroundShift {
      0%, 100% { filter: hue-rotate(0deg) brightness(1); }
      25% { filter: hue-rotate(15deg) brightness(1.1); }
      50% { filter: hue-rotate(-10deg) brightness(0.9); }
      75% { filter: hue-rotate(20deg) brightness(1.05); }
    }
    
    /* Terminal scanlines effect */
    body::before {
      content: '';
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(
        transparent 50%, 
        rgba(168, 218, 220, 0.02) 50%
      );
      background-size: 100% 3px;
      pointer-events: none;
      z-index: 1000;
      animation: scanlines 0.08s linear infinite;
    }
    
    @keyframes scanlines {
      0% { transform: translateY(0); }
      100% { transform: translateY(3px); }
    }

    /* Floating writing particles */
    body::after {
      content: '';
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-image: 
        radial-gradient(2px 2px at 20px 30px, rgba(168, 218, 220, 0.3), transparent),
        radial-gradient(2px 2px at 40px 70px, rgba(241, 250, 238, 0.3), transparent),
        radial-gradient(1px 1px at 90px 40px, rgba(69, 90, 120, 0.4), transparent),
        radial-gradient(1px 1px at 130px 80px, rgba(27, 38, 59, 0.3), transparent),
        radial-gradient(2px 2px at 160px 30px, rgba(65, 90, 119, 0.3), transparent);
      background-repeat: repeat;
      background-size: 200px 100px;
      animation: floatParticles 30s linear infinite;
      pointer-events: none;
      z-index: 1;
    }

    @keyframes floatParticles {
      0% { transform: translateY(100vh) rotate(0deg); }
      100% { transform: translateY(-100vh) rotate(360deg); }
    }

    /* ContentCrafter Navigation - Standalone */
    .contentcrafter-nav {
      position: fixed;
      top: 20px;
      right: 20px;
      z-index: 3000;
      background: rgba(13, 27, 42, 0.95);
      border: 2px solid #a8dadc;
      border-radius: 12px;
      backdrop-filter: blur(15px);
      box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
    }
    
    .contentcrafter-dropdown {
      position: relative;
    }
    
    .contentcrafter-menu-btn {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.75rem 1rem;
      background: transparent;
      border: none;
      color: #a8dadc;
      font-size: 1rem;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
      font-family: inherit;
    }
    
    .contentcrafter-menu-btn:hover {
      color: #f1faee;
      transform: scale(1.05);
    }
    
    .contentcrafter-dropdown-menu {
      position: absolute;
      top: 100%;
      right: 0;
      min-width: 250px;
      background: rgba(13, 27, 42, 0.98);
      border: 2px solid #a8dadc;
      border-radius: 12px;
      backdrop-filter: blur(20px);
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.4);
      opacity: 0;
      visibility: hidden;
      transform: translateY(-10px);
      transition: all 0.3s ease;
      margin-top: 0.5rem;
    }
    
    .contentcrafter-dropdown-menu.active {
      opacity: 1;
      visibility: visible;
      transform: translateY(0);
    }
    
    .contentcrafter-menu-header {
      padding: 1rem;
      border-bottom: 1px solid rgba(168, 218, 220, 0.3);
      text-align: center;
    }
    
    .contentcrafter-menu-title {
      font-size: 1.1rem;
      font-weight: bold;
      color: #f1faee;
      margin-bottom: 0.25rem;
    }
    
    .contentcrafter-menu-subtitle {
      font-size: 0.8rem;
      color: #a8dadc;
      opacity: 0.8;
    }
    
    .contentcrafter-menu-item {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      padding: 0.75rem 1rem;
      color: #a8dadc;
      text-decoration: none;
      transition: all 0.3s ease;
      border-bottom: 1px solid rgba(168, 218, 220, 0.1);
      cursor: pointer;
    }
    
    .contentcrafter-menu-item:hover {
      background: rgba(168, 218, 220, 0.1);
      color: #f1faee;
      transform: translateX(5px);
    }
    
    .contentcrafter-menu-item:last-child {
      border-bottom: none;
      border-radius: 0 0 10px 10px;
    }
    
    /* Main Container */
    .contentcrafter-container {
      display: flex;
      min-height: 100vh;
      position: relative;
      z-index: 2;
    }
    
    /* Left Panel - Content Tools */
    .left-panel {
      width: 320px;
      background: linear-gradient(180deg, rgba(13, 27, 42, 0.95) 0%, rgba(27, 38, 59, 0.9) 100%);
      border-right: 2px solid #a8dadc;
      backdrop-filter: blur(15px);
      padding: 1.5rem;
      overflow-y: auto;
      max-height: 100vh;
      box-shadow: 0 0 30px rgba(168, 218, 220, 0.2);
    }
    
    /* Right Panel - Format Tools */
    .right-panel {
      width: 320px;
      background: linear-gradient(180deg, rgba(13, 27, 42, 0.95) 0%, rgba(27, 38, 59, 0.9) 100%);
      border-left: 2px solid #a8dadc;
      backdrop-filter: blur(15px);
      padding: 1.5rem;
      overflow-y: auto;
      max-height: 100vh;
      box-shadow: 0 0 30px rgba(168, 218, 220, 0.2);
    }
    
    /* Center Panel - Main Interface */
    .center-panel {
      flex: 1;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      text-align: center;
      padding: 2rem;
      position: relative;
      background: radial-gradient(ellipse at center, rgba(168, 218, 220, 0.05) 0%, rgba(0, 0, 0, 0.2) 70%);
    }

    /* Grid overlay */
    .center-panel::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background-image: 
        linear-gradient(rgba(168, 218, 220, 0.1) 1px, transparent 1px),
        linear-gradient(90deg, rgba(168, 218, 220, 0.1) 1px, transparent 1px);
      background-size: 20px 20px;
      opacity: 0.3;
      animation: gridPulse 15s ease-in-out infinite;
    }

    @keyframes gridPulse {
      0%, 100% { opacity: 0.3; transform: scale(1); }
      50% { opacity: 0.1; transform: scale(1.02); }
    }
    
    /* Feature Cards */
    .feature-card {
      background: linear-gradient(135deg, rgba(168, 218, 220, 0.1) 0%, rgba(27, 38, 59, 0.3) 100%);
      border: 1px solid rgba(168, 218, 220, 0.3);
      border-radius: 12px;
      padding: 1.5rem;
      margin-bottom: 1rem;
      cursor: pointer;
      transition: all 0.3s ease;
      backdrop-filter: blur(10px);
      position: relative;
      overflow: hidden;
    }

    .feature-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(168, 218, 220, 0.1), transparent);
      transition: left 0.5s ease;
    }

    .feature-card:hover::before {
      left: 100%;
    }
    
    .feature-card:hover {
      transform: translateY(-5px) scale(1.02);
      border-color: #a8dadc;
      box-shadow: 0 10px 30px rgba(168, 218, 220, 0.4);
      background: linear-gradient(135deg, rgba(168, 218, 220, 0.2) 0%, rgba(27, 38, 59, 0.4) 100%);
    }
    
    .card-icon {
      font-size: 2.5rem;
      margin-bottom: 1rem;
      display: block;
      filter: drop-shadow(0 0 10px currentColor);
    }
    
    .card-title {
      font-size: 1.1rem;
      font-weight: bold;
      color: #a8dadc;
      margin-bottom: 0.5rem;
      text-shadow: 0 0 5px rgba(168, 218, 220, 0.5);
    }
    
    .card-description {
      font-size: 0.9rem;
      color: #78909c;
      opacity: 0.9;
      line-height: 1.4;
    }
    
    /* Hero Section */
    .hero-section {
      position: relative;
      z-index: 3;
      text-align: center;
    }
    
    .hero-logo {
      font-size: 5rem;
      margin-bottom: 1rem;
      animation: contentPulse 3s ease-in-out infinite;
      filter: drop-shadow(0 0 20px #a8dadc);
    }

    @keyframes contentPulse {
      0%, 100% { transform: scale(1) rotate(0deg); filter: drop-shadow(0 0 20px #a8dadc); }
      25% { transform: scale(1.05) rotate(2deg); filter: drop-shadow(0 0 25px #f1faee); }
      50% { transform: scale(1.1) rotate(-1deg); filter: drop-shadow(0 0 30px #415a77); }
      75% { transform: scale(1.05) rotate(1deg); filter: drop-shadow(0 0 25px #1b263b); }
    }
    
    .hero-title {
      font-size: 3.5rem;
      font-weight: 800;
      background: linear-gradient(45deg, #a8dadc, #f1faee, #415a77, #1b263b);
      background-size: 300% 300%;
      background-clip: text;
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      animation: gradientFlow 4s ease-in-out infinite;
      margin-bottom: 1rem;
      text-shadow: 0 0 30px rgba(168, 218, 220, 0.5);
    }

    @keyframes gradientFlow {
      0%, 100% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
    }
    
    .hero-tagline {
      font-size: 1.3rem;
      color: #78909c;
      margin-bottom: 1.5rem;
      opacity: 0.9;
      font-weight: 300;
    }
    
    .hero-description {
      font-size: 1rem;
      line-height: 1.6;
      color: #a8dadc;
      margin-bottom: 2rem;
      max-width: 600px;
      opacity: 0.8;
    }

    /* Hero Stats */
    .hero-stats {
      display: flex;
      justify-content: center;
      gap: 2rem;
      margin-top: 2rem;
      flex-wrap: wrap;
    }

    .stat-item {
      background: linear-gradient(135deg, rgba(168, 218, 220, 0.1) 0%, rgba(0, 0, 0, 0.3) 100%);
      border: 1px solid rgba(168, 218, 220, 0.3);
      border-radius: 12px;
      padding: 1.5rem;
      text-align: center;
      min-width: 140px;
      backdrop-filter: blur(10px);
      transition: all 0.3s ease;
    }

    .stat-item:hover {
      transform: translateY(-3px);
      border-color: #a8dadc;
      box-shadow: 0 8px 25px rgba(168, 218, 220, 0.3);
    }

    .stat-value {
      display: block;
      font-size: 2.2rem;
      font-weight: bold;
      color: #a8dadc;
      text-shadow: 0 0 10px currentColor;
      margin-bottom: 0.5rem;
    }

    .stat-label {
      font-size: 0.9rem;
      color: #78909c;
      text-transform: uppercase;
      letter-spacing: 1px;
    }

    /* Hero Action Button */
    .hero-action {
      background: linear-gradient(135deg, #a8dadc 0%, #f1faee 50%, #415a77 100%);
      border: none;
      padding: 1rem 2rem;
      border-radius: 25px;
      color: #0d1b2a;
      font-size: 1.1rem;
      font-weight: bold;
      cursor: pointer;
      transition: all 0.3s ease;
      margin-top: 1.5rem;
      position: relative;
      z-index: 10;
      text-transform: uppercase;
      letter-spacing: 1px;
    }

    .hero-action:hover {
      transform: translateY(-3px) scale(1.05);
      box-shadow: 0 10px 30px rgba(168, 218, 220, 0.6);
      filter: brightness(1.1);
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      .contentcrafter-container {
        flex-direction: column;
      }
      
      .left-panel,
      .right-panel {
        width: 100%;
        max-height: none;
        order: 2;
      }
      
      .center-panel {
        order: 1;
        min-height: 60vh;
      }
      
      .hero-title {
        font-size: 2.5rem;
      }
      
      .hero-stats {
        gap: 1rem;
      }
    }

    /* Content Creation Indicators */
    .content-indicator {
      position: absolute;
      width: 6px;
      height: 6px;
      background: #a8dadc;
      border-radius: 50%;
      animation: floatContent 3s ease-in-out infinite;
      opacity: 0.7;
    }

    @keyframes floatContent {
      0%, 100% { transform: translateY(0) scale(1); opacity: 0.7; }
      50% { transform: translateY(-20px) scale(1.2); opacity: 1; }
    }

    .content-indicator:nth-child(1) { top: 20%; left: 10%; animation-delay: 0s; background: #a8dadc; }
    .content-indicator:nth-child(2) { top: 30%; right: 15%; animation-delay: 0.5s; background: #f1faee; }
    .content-indicator:nth-child(3) { bottom: 25%; left: 20%; animation-delay: 1s; background: #415a77; }
    .content-indicator:nth-child(4) { bottom: 40%; right: 10%; animation-delay: 1.5s; background: #1b263b; }
    .content-indicator:nth-child(5) { top: 50%; left: 5%; animation-delay: 2s; background: #78909c; }
    .content-indicator:nth-child(6) { top: 60%; right: 5%; animation-delay: 2.5s; background: #457b9d; }

    /* Panel Headers */
    .panel-header {
      text-align: center;
      margin-bottom: 1.5rem;
      padding-bottom: 1rem;
      border-bottom: 1px solid rgba(168, 218, 220, 0.3);
    }

    .panel-title {
      font-size: 1.3rem;
      font-weight: bold;
      color: #a8dadc;
      margin-bottom: 0.5rem;
      text-shadow: 0 0 10px rgba(168, 218, 220, 0.5);
    }

    .panel-subtitle {
      font-size: 0.9rem;
      color: #78909c;
      opacity: 0.8;
    }
  </style>
</head>

