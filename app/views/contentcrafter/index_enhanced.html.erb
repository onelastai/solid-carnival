  <script>
    // ContentCrafter Navigation Functions
    function toggleContentCrafterMenu() {
      const menu = document.getElementById('contentcrafter-menu');
      menu.classList.toggle('active');
    }

    // Close menu when clicking outside
    document.addEventListener('click', function(e) {
      if (!e.target.closest('.contentcrafter-nav')) {
        document.getElementById('contentcrafter-menu').classList.remove('active');
      }
    });

    // Chat functionality
    function startContentChat() {
      document.getElementById('content-chat-modal').style.display = 'block';
      document.getElementById('content-input').focus();
      toggleContentCrafterMenu(); // Close dropdown
    }

    function closeContentChat() {
      document.getElementById('content-chat-modal').style.display = 'none';
    }

    function sendContentMessage() {
      const input = document.getElementById('content-input');
      const message = input.value.trim();
      
      if (!message) return;
      
      // Add user message to chat
      addMessageToChat('user', message);
      
      // Clear input
      input.value = '';
      
      // Show loading
      addMessageToChat('ai', 'üåå Crafting your content...', true);
      
      // Send to ContentCrafter AI
      fetch('/contentcrafter/chat', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'X-CSRF-Token': document.querySelector('[name="csrf-token"]').content
        },
        body: JSON.stringify({ message: message })
      })
      .then(response => response.json())
      .then(data => {
        // Remove loading message
        const messages = document.getElementById('chat-messages');
        if (messages.lastChild) {
          messages.removeChild(messages.lastChild);
        }
        
        // Add AI response
        addMessageToChat('ai', data.response);
        
        // Show content analysis
        if (data.content_analysis) {
          showContentAnalysis(data.content_analysis);
        }
        
        // Update stats
        updateStats();
      })
      .catch(error => {
        console.error('Error:', error);
        const messages = document.getElementById('chat-messages');
        if (messages.lastChild) {
          messages.removeChild(messages.lastChild);
        }
        addMessageToChat('ai', 'Sorry, I encountered a technical issue. Please try again.');
      });
    }

    function addMessageToChat(sender, message, isLoading = false) {
      const messagesDiv = document.getElementById('chat-messages');
      const messageDiv = document.createElement('div');
      
      const senderColor = sender === 'user' ? '#415a77' : '#a8dadc';
      const senderIcon = sender === 'user' ? 'üë§' : 'üåå';
      const bgColor = sender === 'user' ? 'rgba(65, 90, 119, 0.1)' : 'rgba(168, 218, 220, 0.1)';
      
      messageDiv.style.cssText = `
        margin-bottom: 1rem;
        padding: 1rem;
        background: ${bgColor};
        border-radius: 10px;
        border-left: 3px solid ${senderColor};
        ${isLoading ? 'animation: pulse 1.5s ease-in-out infinite;' : ''}
      `;
      
      messageDiv.innerHTML = `
        <div style="color: ${senderColor}; font-weight: bold; margin-bottom: 0.5rem; font-size: 0.9rem;">
          ${senderIcon} ${sender === 'user' ? 'You' : 'ContentCrafter'}
        </div>
        <div style="color: #78909c; line-height: 1.5; white-space: pre-wrap;">${message}</div>
      `;
      
      messagesDiv.appendChild(messageDiv);
      messagesDiv.scrollTop = messagesDiv.scrollHeight;
    }

    function showContentAnalysis(analysis) {
      const analysisDiv = document.getElementById('content-analysis');
      const resultsDiv = document.getElementById('content-results');
      
      resultsDiv.innerHTML = `
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 1rem;">
          <div>
            <strong>Content Type:</strong><br>
            ${analysis.content_type || 'General Content'}
          </div>
          <div>
            <strong>Quality Score:</strong><br>
            ${analysis.quality_score || 'Excellent'}/100
          </div>
          <div>
            <strong>Readability:</strong><br>
            ${analysis.readability || 'Professional'}
          </div>
        </div>
      `;
      
      analysisDiv.style.display = 'block';
    }

    function updateStats() {
      const countElement = document.getElementById('content-count');
      const current = parseInt(countElement.textContent) || 0;
      countElement.textContent = current + 1;
    }

