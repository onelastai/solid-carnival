<div class="min-h-screen bg-gray-900">
  <!-- Community Header -->
  <section class="relative py-20 overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-emerald-900/20 via-teal-900/20 to-cyan-900/20"></div>
    <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-black/40"></div>
    
    <div class="container mx-auto px-6 relative z-10">
      <div class="text-center mb-16">
        <h1 class="text-5xl lg:text-6xl font-bold text-white mb-6">
          Welcome to the <span class="text-emerald-400">Community</span>
        </h1>
        <p class="text-xl text-gray-300 max-w-3xl mx-auto">
          Connect with <%= number_with_delimiter(@community_stats[:total_members]) %>+ developers, 
          share knowledge, and build the future of AI together
        </p>
      </div>
      
      <!-- Community Stats -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 max-w-4xl mx-auto">
        <div class="text-center">
          <div class="text-3xl font-bold text-emerald-400 mb-2"><%= number_with_delimiter(@community_stats[:total_members]) %></div>
          <div class="text-gray-400">Community Members</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-teal-400 mb-2"><%= number_with_delimiter(@community_stats[:active_discussions]) %></div>
          <div class="text-gray-400">Active Discussions</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-cyan-400 mb-2"><%= @community_stats[:posts_today] %></div>
          <div class="text-gray-400">Posts Today</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-blue-400 mb-2"><%= number_with_delimiter(@community_stats[:answers_given]) %></div>
          <div class="text-gray-400">Answers Given</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Quick Access Navigation -->
  <section class="py-16 border-t border-gray-800">
    <div class="container mx-auto px-6">
      <div class="grid lg:grid-cols-4 gap-8">
        <!-- Community Forum -->
        <div class="feature-card group">
          <div class="card-bg-gradient"></div>
          <div class="absolute inset-0 bg-gradient-to-br from-white/5 to-transparent rounded-xl"></div>
          
          <div class="relative z-10 p-8">
            <div class="w-16 h-16 bg-gradient-to-br from-emerald-500 to-teal-600 rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
              <span class="text-2xl">ðŸ’¬</span>
            </div>
            
            <h3 class="text-xl font-bold text-white mb-4">Community Forum</h3>
            <p class="text-gray-300 mb-6">
              Join discussions, ask questions, and share knowledge with our vibrant developer community
            </p>
            
            <a href="/community/forum" class="inline-flex items-center text-emerald-400 hover:text-emerald-300 transition-colors duration-200">
              Join Discussions
              <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </div>
        
        <!-- Documentation -->
        <div class="feature-card group">
          <div class="card-bg-gradient"></div>
          <div class="absolute inset-0 bg-gradient-to-br from-white/5 to-transparent rounded-xl"></div>
          
          <div class="relative z-10 p-8">
            <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-indigo-600 rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
              <span class="text-2xl">ðŸ“š</span>
            </div>
            
            <h3 class="text-xl font-bold text-white mb-4">Documentation</h3>
            <p class="text-gray-300 mb-6">
              Comprehensive guides, API references, and tutorials for every skill level
            </p>
            
            <a href="/docs" class="inline-flex items-center text-blue-400 hover:text-blue-300 transition-colors duration-200">
              Explore Docs
              <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </div>
        
        <!-- Learning -->
        <div class="feature-card group">
          <div class="card-bg-gradient"></div>
          <div class="absolute inset-0 bg-gradient-to-br from-white/5 to-transparent rounded-xl"></div>
          
          <div class="relative z-10 p-8">
            <div class="w-16 h-16 bg-gradient-to-br from-purple-500 to-pink-600 rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
              <span class="text-2xl">ðŸŽ¯</span>
            </div>
            
            <h3 class="text-xl font-bold text-white mb-4">Learning Paths</h3>
            <p class="text-gray-300 mb-6">
              Interactive tutorials and structured learning paths for mastering AI development
            </p>
            
            <a href="/learn" class="inline-flex items-center text-purple-400 hover:text-purple-300 transition-colors duration-200">
              Start Learning
              <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </div>
        
        <!-- Support -->
        <div class="feature-card group">
          <div class="card-bg-gradient"></div>
          <div class="absolute inset-0 bg-gradient-to-br from-white/5 to-transparent rounded-xl"></div>
          
          <div class="relative z-10 p-8">
            <div class="w-16 h-16 bg-gradient-to-br from-orange-500 to-red-600 rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
              <span class="text-2xl">ðŸ†˜</span>
            </div>
            
            <h3 class="text-xl font-bold text-white mb-4">24/7 Support</h3>
            <p class="text-gray-300 mb-6">
              Get help from our expert team whenever you need assistance with the platform
            </p>
            
            <a href="/support" class="inline-flex items-center text-orange-400 hover:text-orange-300 transition-colors duration-200">
              Get Support
              <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Recent Discussions -->
  <section class="py-20 border-t border-gray-800">
    <div class="container mx-auto px-6">
      <div class="flex items-center justify-between mb-12">
        <h2 class="text-3xl font-bold text-white">Recent Discussions</h2>
        <a href="/community/forum" class="text-emerald-400 hover:text-emerald-300 transition-colors">View All â†’</a>
      </div>
      
      <div class="grid gap-6">
        <% @recent_discussions.each do |discussion| %>
          <div class="bg-gray-800/50 border border-gray-700 rounded-xl p-6 hover:border-emerald-500/50 transition-colors">
            <div class="flex items-start justify-between">
              <div class="flex-1">
                <h3 class="text-lg font-semibold text-white mb-2">
                  <a href="/community/forum/post/<%= discussion[:id] %>" class="hover:text-emerald-400 transition-colors">
                    <%= discussion[:title] %>
                  </a>
                </h3>
                <div class="flex items-center gap-4 text-sm text-gray-400">
                  <span>by <%= discussion[:author] %></span>
                  <span><%= discussion[:replies] %> replies</span>
                  <span>Last activity <%= discussion[:last_activity] %></span>
                  <span class="px-2 py-1 bg-emerald-600/20 text-emerald-400 rounded-full text-xs">
                    <%= discussion[:category] %>
                  </span>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </section>

  <!-- Featured Content -->
  <section class="py-20 border-t border-gray-800">
    <div class="container mx-auto px-6">
      <h2 class="text-3xl font-bold text-white mb-12">Featured Content</h2>
      
      <div class="grid lg:grid-cols-2 gap-8">
        <% @featured_posts.each do |post| %>
          <div class="feature-card group">
            <div class="card-bg-gradient"></div>
            <div class="absolute inset-0 bg-gradient-to-br from-white/5 to-transparent rounded-xl"></div>
            
            <div class="relative z-10 p-8">
              <h3 class="text-xl font-bold text-white mb-4"><%= post[:title] %></h3>
              <p class="text-gray-300 mb-6"><%= post[:excerpt] %></p>
              
              <div class="flex items-center justify-between">
                <div class="flex items-center gap-3">
                  <div class="w-8 h-8 bg-emerald-600 rounded-full flex items-center justify-center">
                    <span class="text-sm font-bold text-white"><%= post[:author][0] %></span>
                  </div>
                  <div>
                    <div class="text-sm font-medium text-white"><%= post[:author] %></div>
                    <div class="text-xs text-gray-400"><%= post[:read_time] %> read</div>
                  </div>
                </div>
                
                <a href="/community/forum/post/<%= post[:id] %>" class="text-emerald-400 hover:text-emerald-300 transition-colors">
                  Read More â†’
                </a>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </section>
</div>