<div class="min-h-screen bg-gray-900">
  <!-- Tutorial Header -->
  <section class="relative py-20 overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-purple-900/20 via-indigo-900/20 to-blue-900/20"></div>
    <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-black/40"></div>
    
    <div class="container mx-auto px-6 relative z-10">
      <div class="max-w-4xl mx-auto">
        <!-- Breadcrumb -->
        <nav class="mb-8">
          <ol class="flex items-center gap-2 text-sm text-gray-400">
            <li><a href="/learn" class="hover:text-white transition-colors">Learning</a></li>
            <li>→</li>
            <li><a href="/learn/tutorials" class="hover:text-white transition-colors">Tutorials</a></li>
            <li>→</li>
            <li class="text-white"><%= @tutorial[:title] %></li>
          </ol>
        </nav>
        
        <div class="flex items-start gap-8">
          <div class="flex-1">
            <div class="flex items-center gap-4 mb-6">
              <span class="px-3 py-1 bg-<%= @tutorial[:difficulty] == 'Beginner' ? 'green' : @tutorial[:difficulty] == 'Intermediate' ? 'yellow' : @tutorial[:difficulty] == 'Advanced' ? 'orange' : 'red' %>-600/20 text-<%= @tutorial[:difficulty] == 'Beginner' ? 'green' : @tutorial[:difficulty] == 'Intermediate' ? 'yellow' : @tutorial[:difficulty] == 'Advanced' ? 'orange' : 'red' %>-400 rounded-full text-sm">
                <%= @tutorial[:difficulty] %>
              </span>
              <span class="text-gray-400"><%= @tutorial[:duration] %></span>
              <span class="px-2 py-1 bg-gray-700 rounded text-xs text-gray-300"><%= @tutorial[:category] %></span>
            </div>
            
            <h1 class="text-4xl lg:text-5xl font-bold text-white mb-6"><%= @tutorial[:title] %></h1>
            <p class="text-xl text-gray-300 mb-8"><%= @tutorial[:description] %></p>
            
            <div class="flex flex-wrap gap-2 mb-8">
              <% @tutorial[:technologies].each do |tech| %>
                <span class="px-3 py-1 bg-purple-600/20 text-purple-300 rounded-full text-sm"><%= tech %></span>
              <% end %>
            </div>
            
            <div class="flex items-center gap-6 mb-8">
              <div class="flex items-center gap-2">
                <div class="flex items-center">
                  <% 5.times do |i| %>
                    <svg class="w-5 h-5 <%= i < @tutorial[:rating].floor ? 'text-yellow-400' : 'text-gray-600' %>" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                    </svg>
                  <% end %>
                </div>
                <span class="text-white font-medium"><%= @tutorial[:rating] %></span>
                <span class="text-gray-400">(<%= number_with_delimiter(@tutorial[:students]) %> students)</span>
              </div>
            </div>
            
            <button class="bg-purple-600 hover:bg-purple-500 text-white font-bold py-4 px-8 rounded-lg transition-colors text-lg">
              Start Tutorial
            </button>
          </div>
          
          <!-- Instructor Card -->
          <div class="w-80 bg-gray-800/50 border border-gray-700 rounded-xl p-6">
            <h3 class="text-lg font-bold text-white mb-4">Your Instructor</h3>
            
            <div class="flex items-center gap-3 mb-4">
              <div class="w-12 h-12 bg-purple-600 rounded-full flex items-center justify-center">
                <span class="text-white font-bold"><%= @tutorial[:instructor][:name].split.map(&:first).join %></span>
              </div>
              <div>
                <div class="text-white font-medium"><%= @tutorial[:instructor][:name] %></div>
                <div class="text-sm text-gray-400"><%= @tutorial[:instructor][:title] %></div>
              </div>
            </div>
            
            <p class="text-gray-300 text-sm"><%= @tutorial[:instructor][:bio] %></p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Tutorial Content -->
  <section class="py-20 border-t border-gray-800">
    <div class="container mx-auto px-6">
      <div class="max-w-6xl mx-auto">
        <div class="grid lg:grid-cols-3 gap-12">
          <!-- Main Content -->
          <div class="lg:col-span-2">
            <!-- Prerequisites -->
            <div class="bg-gray-800/50 border border-gray-700 rounded-xl p-6 mb-8">
              <h3 class="text-xl font-bold text-white mb-4">Prerequisites</h3>
              <ul class="space-y-2">
                <% @tutorial[:prerequisites].each do |prereq| %>
                  <li class="flex items-center gap-3 text-gray-300">
                    <svg class="w-5 h-5 text-green-400 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                    </svg>
                    <%= prereq %>
                  </li>
                <% end %>
              </ul>
            </div>
            
            <!-- Learning Objectives -->
            <div class="bg-gray-800/50 border border-gray-700 rounded-xl p-6 mb-8">
              <h3 class="text-xl font-bold text-white mb-4">What You'll Learn</h3>
              <ul class="space-y-2">
                <% @tutorial[:learning_objectives].each do |objective| %>
                  <li class="flex items-center gap-3 text-gray-300">
                    <svg class="w-5 h-5 text-purple-400 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
                    </svg>
                    <%= objective %>
                  </li>
                <% end %>
              </ul>
            </div>
            
            <!-- Resources -->
            <div class="bg-gray-800/50 border border-gray-700 rounded-xl p-6">
              <h3 class="text-xl font-bold text-white mb-4">Tutorial Resources</h3>
              <div class="space-y-3">
                <% @tutorial[:resources].each do |resource| %>
                  <a href="<%= resource[:url] %>" target="_blank" 
                     class="flex items-center gap-3 p-3 bg-gray-700/50 rounded-lg hover:bg-gray-700 transition-colors">
                    <div class="w-8 h-8 bg-<%= resource[:type] == 'github' ? 'gray' : resource[:type] == 'docs' ? 'blue' : 'green' %>-600/20 rounded flex items-center justify-center">
                      <% if resource[:type] == 'github' %>
                        <svg class="w-4 h-4 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z" clip-rule="evenodd"/>
                        </svg>
                      <% elsif resource[:type] == 'docs' %>
                        <svg class="w-4 h-4 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 6a1 1 0 011-1h6a1 1 0 110 2H7a1 1 0 01-1-1zm1 3a1 1 0 100 2h6a1 1 0 100-2H7z" clip-rule="evenodd"/>
                        </svg>
                      <% else %>
                        <svg class="w-4 h-4 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M18 10c0 3.866-3.582 7-8 7a8.841 8.841 0 01-4.083-.98L2 17l1.338-3.123C2.493 12.767 2 11.434 2 10c0-3.866 3.582-7 8-7s8 3.134 8 7zM7 9H5v2h2V9zm8 0h-2v2h2V9zM9 9h2v2H9V9z" clip-rule="evenodd"/>
                        </svg>
                      <% end %>
                    </div>
                    <div>
                      <div class="text-white font-medium"><%= resource[:title] %></div>
                      <div class="text-sm text-gray-400 capitalize"><%= resource[:type] %></div>
                    </div>
                  </a>
                <% end %>
              </div>
            </div>
          </div>
          
          <!-- Sidebar -->
          <div class="space-y-8">
            <!-- Tutorial Progress -->
            <div class="bg-gray-800/50 border border-gray-700 rounded-xl p-6">
              <h3 class="text-lg font-bold text-white mb-4">Your Progress</h3>
              <div class="mb-4">
                <div class="flex justify-between text-sm mb-2">
                  <span class="text-gray-300">Completed</span>
                  <span class="text-white"><%= @tutorial_progress[:completed_chapters] %>/<%= @tutorial_progress[:total_chapters] %> chapters</span>
                </div>
                <div class="w-full bg-gray-700 rounded-full h-2">
                  <div class="bg-purple-600 h-2 rounded-full" style="width: <%= @tutorial_progress[:completion_percentage] %>%"></div>
                </div>
              </div>
              <p class="text-sm text-gray-400">Time spent: <%= @tutorial_progress[:time_spent] %></p>
            </div>
            
            <!-- Chapter List -->
            <div class="bg-gray-800/50 border border-gray-700 rounded-xl p-6">
              <h3 class="text-lg font-bold text-white mb-4">Chapters</h3>
              <div class="space-y-3">
                <% @tutorial[:chapters].each_with_index do |chapter, index| %>
                  <div class="flex items-center gap-3 p-3 bg-gray-700/50 rounded-lg">
                    <div class="w-6 h-6 bg-<%= chapter[:completed] ? 'green' : 'gray' %>-600 rounded-full flex items-center justify-center text-xs text-white font-bold">
                      <%= index + 1 %>
                    </div>
                    <div class="flex-1">
                      <div class="text-white font-medium text-sm"><%= chapter[:title] %></div>
                      <div class="text-xs text-gray-400"><%= chapter[:duration] %></div>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
            
            <!-- Related Tutorials -->
            <div class="bg-gray-800/50 border border-gray-700 rounded-xl p-6">
              <h3 class="text-lg font-bold text-white mb-4">Related Tutorials</h3>
              <div class="space-y-3">
                <% @related_tutorials.each do |tutorial| %>
                  <a href="/learn/tutorial/<%= tutorial[:id] %>" class="block p-3 bg-gray-700/50 rounded-lg hover:bg-gray-700 transition-colors">
                    <div class="text-white font-medium text-sm mb-1"><%= tutorial[:title] %></div>
                    <div class="flex items-center gap-2 text-xs text-gray-400">
                      <span><%= tutorial[:difficulty] %></span>
                      <span>•</span>
                      <span><%= tutorial[:duration] %></span>
                    </div>
                  </a>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>