<div class="min-h-screen bg-gray-900">
  <!-- Learning Header -->
  <section class="relative py-20 overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-purple-900/20 via-indigo-900/20 to-blue-900/20"></div>
    <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-black/40"></div>
    
    <div class="container mx-auto px-6 relative z-10">
      <div class="text-center mb-16">
        <h1 class="text-5xl lg:text-6xl font-bold text-white mb-6">
          Master <span class="text-purple-400">AI Development</span>
        </h1>
        <p class="text-xl text-gray-300 max-w-3xl mx-auto">
          Learn from industry experts through hands-on tutorials, structured learning paths, 
          and real-world projects that will advance your AI development skills
        </p>
      </div>
      
      <!-- Quick Stats -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 max-w-4xl mx-auto">
        <div class="text-center">
          <div class="text-3xl font-bold text-purple-400 mb-2">50+</div>
          <div class="text-gray-400">Tutorials</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-indigo-400 mb-2">12</div>
          <div class="text-gray-400">Learning Paths</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-blue-400 mb-2">5K+</div>
          <div class="text-gray-400">Students</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-cyan-400 mb-2">4.8★</div>
          <div class="text-gray-400">Average Rating</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Tutorials -->
  <section class="py-20 border-t border-gray-800">
    <div class="container mx-auto px-6">
      <div class="flex items-center justify-between mb-12">
        <h2 class="text-3xl font-bold text-white">Featured Tutorials</h2>
        <a href="/learn/tutorials" class="text-purple-400 hover:text-purple-300 transition-colors">View All Tutorials →</a>
      </div>
      
      <div class="grid lg:grid-cols-3 gap-8">
        <% @featured_tutorials.each do |tutorial| %>
          <div class="feature-card group">
            <div class="card-bg-gradient"></div>
            <div class="absolute inset-0 bg-gradient-to-br from-white/5 to-transparent rounded-xl"></div>
            
            <div class="relative z-10 p-8">
              <div class="flex items-center justify-between mb-4">
                <span class="px-3 py-1 bg-<%= tutorial[:difficulty] == 'Beginner' ? 'green' : tutorial[:difficulty] == 'Intermediate' ? 'yellow' : tutorial[:difficulty] == 'Advanced' ? 'orange' : 'red' %>-600/20 text-<%= tutorial[:difficulty] == 'Beginner' ? 'green' : tutorial[:difficulty] == 'Intermediate' ? 'yellow' : tutorial[:difficulty] == 'Advanced' ? 'orange' : 'red' %>-400 rounded-full text-sm">
                  <%= tutorial[:difficulty] %>
                </span>
                <span class="text-gray-400 text-sm"><%= tutorial[:duration] %></span>
              </div>
              
              <h3 class="text-xl font-bold text-white mb-4"><%= tutorial[:title] %></h3>
              <p class="text-gray-300 mb-6"><%= tutorial[:description] %></p>
              
              <div class="flex flex-wrap gap-2 mb-6">
                <% tutorial[:technologies].each do |tech| %>
                  <span class="px-2 py-1 bg-purple-600/20 text-purple-300 rounded text-xs"><%= tech %></span>
                <% end %>
              </div>
              
              <div class="flex items-center justify-between">
                <div class="flex items-center gap-2">
                  <div class="flex items-center">
                    <% 5.times do |i| %>
                      <svg class="w-4 h-4 <%= i < tutorial[:rating].floor ? 'text-yellow-400' : 'text-gray-600' %>" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                      </svg>
                    <% end %>
                  </div>
                  <span class="text-sm text-gray-400">(<%= tutorial[:students] %>)</span>
                </div>
                
                <a href="/learn/tutorial/<%= tutorial[:id] %>" class="text-purple-400 hover:text-purple-300 transition-colors font-medium">
                  Start Tutorial →
                </a>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </section>

  <!-- Learning Paths -->
  <section class="py-20 border-t border-gray-800">
    <div class="container mx-auto px-6">
      <div class="flex items-center justify-between mb-12">
        <div>
          <h2 class="text-3xl font-bold text-white mb-4">Learning Paths</h2>
          <p class="text-gray-300">Structured curricula designed to take you from beginner to expert</p>
        </div>
        <a href="/learn/paths" class="text-purple-400 hover:text-purple-300 transition-colors">View All Paths →</a>
      </div>
      
      <div class="grid lg:grid-cols-2 gap-8">
        <% @learning_paths.each do |path| %>
          <div class="feature-card group">
            <div class="card-bg-gradient"></div>
            <div class="absolute inset-0 bg-gradient-to-br from-white/5 to-transparent rounded-xl"></div>
            
            <div class="relative z-10 p-8">
              <div class="flex items-center gap-3 mb-4">
                <div class="w-12 h-12 bg-<%= path[:color] %>-600/20 rounded-xl flex items-center justify-center">
                  <span class="text-2xl"><%= path[:icon] %></span>
                </div>
                <div>
                  <span class="px-3 py-1 bg-<%= path[:level] == 'Beginner' ? 'green' : path[:level] == 'Intermediate' ? 'yellow' : 'red' %>-600/20 text-<%= path[:level] == 'Beginner' ? 'green' : path[:level] == 'Intermediate' ? 'yellow' : 'red' %>-400 rounded-full text-sm">
                    <%= path[:level] %>
                  </span>
                </div>
              </div>
              
              <h3 class="text-xl font-bold text-white mb-4"><%= path[:title] %></h3>
              <p class="text-gray-300 mb-6"><%= path[:description] %></p>
              
              <div class="grid grid-cols-3 gap-4 mb-6 text-center">
                <div>
                  <div class="text-lg font-bold text-<%= path[:color] %>-400"><%= path[:tutorials] %></div>
                  <div class="text-xs text-gray-400">Tutorials</div>
                </div>
                <div>
                  <div class="text-lg font-bold text-<%= path[:color] %>-400"><%= path[:duration] %></div>
                  <div class="text-xs text-gray-400">Duration</div>
                </div>
                <div>
                  <div class="text-lg font-bold text-<%= path[:color] %>-400"><%= path[:students] %></div>
                  <div class="text-xs text-gray-400">Students</div>
                </div>
              </div>
              
              <a href="/learn/path/<%= path[:id] %>" class="w-full bg-<%= path[:color] %>-600 hover:bg-<%= path[:color] %>-500 text-white font-medium py-3 px-6 rounded-lg transition-colors block text-center">
                Start Learning Path
              </a>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </section>

  <!-- Skill Categories -->
  <section class="py-20 border-t border-gray-800">
    <div class="container mx-auto px-6">
      <h2 class="text-3xl font-bold text-white mb-12 text-center">Browse by Skill Category</h2>
      
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-6">
        <% @skill_categories.each do |category| %>
          <div class="feature-card group text-center">
            <div class="card-bg-gradient"></div>
            <div class="absolute inset-0 bg-gradient-to-br from-white/5 to-transparent rounded-xl"></div>
            
            <div class="relative z-10 p-6">
              <div class="w-12 h-12 bg-<%= category[:color] %>-600/20 rounded-xl flex items-center justify-center mx-auto mb-4">
                <span class="text-xl"><%= category[:icon] %></span>
              </div>
              
              <h3 class="text-sm font-bold text-white mb-2"><%= category[:name] %></h3>
              <p class="text-xs text-gray-400"><%= category[:count] %> tutorials</p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </section>

  <!-- Recent Additions -->
  <section class="py-20 border-t border-gray-800">
    <div class="container mx-auto px-6">
      <h2 class="text-3xl font-bold text-white mb-12">Recently Added</h2>
      
      <div class="grid lg:grid-cols-3 gap-6">
        <% @recent_additions.each do |tutorial| %>
          <div class="bg-gray-800/50 border border-gray-700 rounded-xl p-6 hover:border-purple-500/50 transition-colors">
            <div class="flex items-start justify-between mb-4">
              <span class="px-3 py-1 bg-<%= tutorial[:difficulty] == 'Beginner' ? 'green' : tutorial[:difficulty] == 'Intermediate' ? 'yellow' : tutorial[:difficulty] == 'Advanced' ? 'orange' : 'red' %>-600/20 text-<%= tutorial[:difficulty] == 'Beginner' ? 'green' : tutorial[:difficulty] == 'Intermediate' ? 'yellow' : tutorial[:difficulty] == 'Advanced' ? 'orange' : 'red' %>-400 rounded-full text-sm">
                <%= tutorial[:difficulty] %>
              </span>
              <span class="text-xs text-gray-400"><%= tutorial[:added] %></span>
            </div>
            
            <h3 class="text-lg font-semibold text-white mb-4">
              <a href="/learn/tutorial/<%= tutorial[:id] %>" class="hover:text-purple-400 transition-colors">
                <%= tutorial[:title] %>
              </a>
            </h3>
            
            <a href="/learn/tutorial/<%= tutorial[:id] %>" class="text-purple-400 hover:text-purple-300 transition-colors text-sm">
              Start Tutorial →
            </a>
          </div>
        <% end %>
      </div>
    </div>
  </section>
</div>