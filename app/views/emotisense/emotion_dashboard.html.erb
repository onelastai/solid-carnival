<script>
  // Terminal command functionality
  const commandInput = document.getElementById('commandInput');
  const commandHistory = document.getElementById('commandHistory');
  
  const commands = {
    'help': 'Available commands: help, status, clear, refresh, chat, journal, wellness, export',
    'status': 'EmotiSense Dashboard - All systems operational',
    'clear': 'CLEAR_SCREEN',
    'refresh': 'REFRESH_DASHBOARD',
    'chat': 'NAVIGATE_CHAT',
    'journal': 'NAVIGATE_JOURNAL',
    'wellness': 'NAVIGATE_WELLNESS',
    'export': 'NAVIGATE_EXPORT',
    'ls': 'emotion_chat  mood_journal  wellness_center  empathy_training  export_data',
    'pwd': '/emotisense/dashboard',
    'whoami': 'emotisense_user',
    'date': new Date().toLocaleString(),
    'uptime': 'System uptime: 2 days, 14 hours, 23 minutes'
  };

  commandInput.addEventListener('keypress', function(e) {
    if (e.key === 'Enter') {
      const command = this.value.trim();
      if (command) {
        executeCommand(command);
        this.value = '';
      }
    }
  });

  function executeCommand(command) {
    // Add command to history
    addToHistory(`$ ${command}`, 'command');
    
    // Execute command
    if (commands[command]) {
      const response = commands[command];
      
      switch(response) {
        case 'CLEAR_SCREEN':
          commandHistory.innerHTML = '';
          break;
        case 'REFRESH_DASHBOARD':
          location.reload();
          break;
        case 'NAVIGATE_CHAT':
          window.location.href = '/emotisense/emotion_chat';
          break;
        case 'NAVIGATE_JOURNAL':
          window.location.href = '/emotisense/mood_journal';
          break;
        case 'NAVIGATE_WELLNESS':
          window.location.href = '/emotisense/wellness_center';
          break;
        case 'NAVIGATE_EXPORT':
          window.location.href = '/emotisense/export_data';
          break;
        default:
          addToHistory(response, 'output');
      }
    } else {
      addToHistory(`Command '${command}' not found. Type 'help' for available commands.`, 'output');
    }
    
    // Scroll to bottom
    commandHistory.scrollTop = commandHistory.scrollHeight;
  }

  function addToHistory(text, type) {
    const line = document.createElement('div');
    line.className = 'history-line';
    
    if (type === 'command') {
      line.innerHTML = `<span class="history-command">${text}</span>`;
    } else {
      line.innerHTML = `<span class="history-output">${text}</span>`;
    }
    
    commandHistory.appendChild(line);
  }

  function refreshDashboard() {
    addToHistory('$ refresh', 'command');
    addToHistory('Refreshing dashboard...', 'output');
    setTimeout(() => {
      location.reload();
    }, 500);
  }

  // Focus on command input when page loads
  window.addEventListener('load', () => {
    commandInput.focus();
  });

  // Keep focus on command input
  document.addEventListener('click', (e) => {
    if (!e.target.closest('.command-interface')) {
      commandInput.focus();
    }
  });
</script>

</body>
