  <script>
    // Chat functionality
    function startEmotionChat() {
      document.getElementById('emotion-chat-modal').style.display = 'block';
      document.getElementById('emotion-input').focus();
    }

    function closeEmotionChat() {
      document.getElementById('emotion-chat-modal').style.display = 'none';
    }

    function sendEmotionMessage() {
      const input = document.getElementById('emotion-input');
      const message = input.value.trim();
      
      if (!message) return;
      
      // Add user message to chat
      addMessageToChat('user', message);
      
      // Clear input
      input.value = '';
      
      // Show loading
      addMessageToChat('ai', 'üåå Analyzing emotions...', true);
      
      // Send to EmotiSense AI
      fetch('/emotisense/chat', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'X-CSRF-Token': document.querySelector('[name="csrf-token"]').content
        },
        body: JSON.stringify({ message: message })
      })
      .then(response => response.json())
      .then(data => {
        // Remove loading message
        const messages = document.getElementById('chat-messages');
        if (messages.lastChild) {
          messages.removeChild(messages.lastChild);
        }
        
        // Add AI response
        addMessageToChat('ai', data.response);
        
        // Show emotion analysis
        if (data.emotion_analysis) {
          showEmotionAnalysis(data.emotion_analysis);
        }
        
        // Update stats
        updateStats();
      })
      .catch(error => {
        console.error('Error:', error);
        const messages = document.getElementById('chat-messages');
        if (messages.lastChild) {
          messages.removeChild(messages.lastChild);
        }
        addMessageToChat('ai', 'Sorry, I encountered a technical issue. Please try again.');
      });
    }

    function addMessageToChat(sender, message, isLoading = false) {
      const messagesDiv = document.getElementById('chat-messages');
      const messageDiv = document.createElement('div');
      
      const senderColor = sender === 'user' ? '#74b9ff' : '#e8b4ff';
      const senderIcon = sender === 'user' ? 'üë§' : 'üé≠';
      const bgColor = sender === 'user' ? 'rgba(116, 185, 255, 0.1)' : 'rgba(232, 180, 255, 0.1)';
      
      messageDiv.style.cssText = `
        margin-bottom: 1rem;
        padding: 1rem;
        background: ${bgColor};
        border-radius: 10px;
        border-left: 3px solid ${senderColor};
        ${isLoading ? 'animation: pulse 1.5s ease-in-out infinite;' : ''}
      `;
      
      messageDiv.innerHTML = `
        <div style="color: ${senderColor}; font-weight: bold; margin-bottom: 0.5rem; font-size: 0.9rem;">
          ${senderIcon} ${sender === 'user' ? 'You' : 'EmotiSense'}
        </div>
        <div style="color: #c77dff; line-height: 1.5; white-space: pre-wrap;">${message}</div>
      `;
      
      messagesDiv.appendChild(messageDiv);
      messagesDiv.scrollTop = messagesDiv.scrollHeight;
    }

    function showEmotionAnalysis(analysis) {
      const analysisDiv = document.getElementById('emotion-analysis');
      const resultsDiv = document.getElementById('emotion-results');
      
      resultsDiv.innerHTML = `
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 1rem;">
          <div>
            <strong>Primary Emotion:</strong><br>
            ${analysis.primary_emotion || 'Not detected'}
          </div>
          <div>
            <strong>Intensity:</strong><br>
            ${analysis.intensity_score || 'Unknown'}/10
          </div>
          <div>
            <strong>Confidence:</strong><br>
