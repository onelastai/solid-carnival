        <!-- Command Bar -->
        <div class="command-bar">
          <div class="command-prompt">
            <span class="prompt-symbol">wellness@emotisense:~$</span>
            <input type="text" class="command-input" placeholder="Enter wellness command (help for options)">
          </div>
        </div>

        <!-- Action Buttons -->
        <div class="action-buttons">
          <a href="/emotisense/mood_journal" class="action-btn">üìù Start Journal</a>
