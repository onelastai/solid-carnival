          <button class="action-btn" onclick="startMeditation()">üßò Start Meditation</button>
        </div>
      </div>
    </div>
  </div>

  <script>
    // Terminal navigation functionality
    function generateWellnessReport() {
      const commandInput = document.querySelector('.command-input');
      commandInput.value = '$ ./generate_wellness_report --comprehensive';
      setTimeout(() => {
        alert('Wellness report generated! Check your downloads folder.');
        commandInput.value = '';
      }, 1000);
    }

    function startMeditation() {
      const commandInput = document.querySelector('.command-input');
      commandInput.value = '$ ./meditation --guided --duration=10min';
      setTimeout(() => {
        alert('Starting guided meditation session...');
        commandInput.value = '';
      }, 1000);
    }

    // Command input functionality
    document.querySelector('.command-input').addEventListener('keypress', function(e) {
      if (e.key === 'Enter') {
        const command = this.value.trim();
        if (command === 'help') {
          alert('Available commands:\\n- wellness_scan\\n- stress_check\\n- meditation_start\\n- report_generate\\n- clear');
        } else if (command === 'clear') {
          this.value = '';
        } else if (command) {
          console.log(`Executing: ${command}`);
          this.value = '';
        }
      }
    });

    // Update system info
    function updateSystemInfo() {
      const systemInfo = document.querySelector('.system-info');
      const statuses = ['ACTIVE', 'MONITORING', 'ANALYZING', 'OPTIMIZING'];
      const randomStatus = statuses[Math.floor(Math.random() * statuses.length)];
      systemInfo.textContent = `WELLNESS | STATUS: ${randomStatus}`;
    }

    // Initialize
    document.addEventListener('DOMContentLoaded', function() {
      console.log('EmotiSense Wellness Center initialized');
      setInterval(updateSystemInfo, 3000);
    });
  </script>
</body>
</html>