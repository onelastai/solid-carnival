    <div class="terminal-prompt">EmotiSense@wellness:~$</div>
    <div class="menu-bar-items">
      <a href="/emotisense" class="top-menu-item">home</a>
      <a href="/emotisense/mood_journal" class="top-menu-item">journal</a>
      <a href="/emotisense/emotion_chat" class="top-menu-item">chat</a>
      <a href="/emotisense/emotion_dashboard" class="top-menu-item">dashboard</a>
