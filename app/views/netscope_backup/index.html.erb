    .terminal-button.green { background: #27ca3f; }
    
    .terminal-title-text {
      margin-left: 1rem;
      color: #000;
      font-weight: bold;
      font-size: 0.9rem;
    }
    
    .terminal-output {
      height: 400px;
      padding: 1rem;
      overflow-y: auto;
      background: #000000;
      color: #00ff00;
      font-family: 'Consolas', 'Monaco', monospace;
      font-size: 14px;
      line-height: 1.4;
    }
    
