    }

    .menu-button.active {
      background: rgba(0, 212, 255, 0.2);
      border-color: #00d4ff;
    }

    /* Terminal-style Dropdown */
    .dropdown {
      position: absolute;
      top: 100%;
      left: 0;
      background: #000000;
      border: 2px solid #00d4ff;
      border-radius: 8px;
      box-shadow: 0 5px 20px rgba(0, 212, 255, 0.4);
