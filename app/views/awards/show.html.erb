<div class="min-h-screen bg-gray-900">
  <!-- Award Header -->
  <section class="relative py-20 overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-<%= @award[:color] %>-900/20 via-indigo-900/20 to-purple-900/20"></div>
    <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-black/40"></div>
    
    <div class="container mx-auto px-6 relative z-10">
      <div class="max-w-4xl mx-auto">
        <!-- Breadcrumb -->
        <nav class="mb-8">
          <ol class="flex items-center gap-2 text-sm text-gray-400">
            <li><a href="/awards" class="hover:text-white transition-colors">Awards</a></li>
            <li>→</li>
            <li class="text-white"><%= @award[:title] %></li>
          </ol>
        </nav>
        
        <div class="text-center mb-8">
          <div class="w-32 h-32 bg-gradient-to-br from-<%= @award[:color] %>-400 to-<%= @award[:color] %>-600 rounded-full flex items-center justify-center mx-auto mb-6">
            <span class="text-6xl"><%= @award[:icon] %></span>
          </div>
          
          <div class="inline-block px-4 py-2 bg-<%= @award[:color] %>-600/20 text-<%= @award[:color] %>-400 rounded-full text-sm font-medium mb-4">
            <%= @award[:category] %>
          </div>
          
          <h1 class="text-4xl lg:text-5xl font-bold text-white mb-4"><%= @award[:title] %></h1>
          
          <div class="flex items-center justify-center gap-6 text-gray-400">
            <span><%= @award[:organization] %></span>
            <span>•</span>
            <span><%= @award[:date] %></span>
            <span>•</span>
            <span><%= @award[:location] %></span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Award Details -->
  <section class="py-20">
    <div class="container mx-auto px-6">
      <div class="max-w-6xl mx-auto">
        <div class="grid lg:grid-cols-3 gap-12">
          <!-- Main Content -->
          <div class="lg:col-span-2">
            <!-- Description -->
            <div class="mb-12">
              <h2 class="text-2xl font-bold text-white mb-6">Award Description</h2>
              <p class="text-gray-300 leading-relaxed text-lg"><%= @award[:description] %></p>
            </div>
            
            <!-- Achievement -->
            <div class="mb-12 p-8 bg-<%= @award[:color] %>-600/10 border border-<%= @award[:color] %>-600/30 rounded-xl">
              <h3 class="text-xl font-bold text-white mb-4">Key Achievement</h3>
              <p class="text-gray-300 leading-relaxed"><%= @award[:achievement] %></p>
            </div>
            
            <!-- Quote -->
            <div class="mb-12">
              <blockquote class="border-l-4 border-<%= @award[:color] %>-500 pl-8 py-6 bg-<%= @award[:color] %>-600/5 rounded-r-xl">
                <p class="text-xl text-gray-200 italic mb-4">"<%= @award[:quote] %>"</p>
                <cite class="text-<%= @award[:color] %>-400 font-medium">— <%= @award[:quote_author] %></cite>
              </blockquote>
            </div>
            
            <!-- Benefits/Metrics -->
            <div class="mb-12">
              <h3 class="text-xl font-bold text-white mb-6">Key Metrics & Benefits</h3>
              <div class="grid md:grid-cols-2 gap-4">
                <% @award[:benefits].each do |benefit| %>
                  <div class="flex items-center gap-3 p-4 bg-gray-800/50 rounded-lg">
                    <div class="w-2 h-2 bg-<%= @award[:color] %>-400 rounded-full"></div>
                    <span class="text-gray-300"><%= benefit %></span>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
          
          <!-- Sidebar -->
          <div class="lg:col-span-1">
            <!-- Award Criteria -->
            <div class="bg-gray-800/50 border border-gray-700 rounded-xl p-6 mb-8">
              <h3 class="text-lg font-bold text-white mb-4">Evaluation Criteria</h3>
              <ul class="space-y-3">
                <% @award[:criteria].each do |criterion| %>
                  <li class="flex items-start gap-3">
                    <div class="w-1.5 h-1.5 bg-<%= @award[:color] %>-400 rounded-full mt-2"></div>
                    <span class="text-gray-300 text-sm"><%= criterion %></span>
                  </li>
                <% end %>
              </ul>
            </div>
            
            <!-- Award Details -->
            <div class="bg-gray-800/50 border border-gray-700 rounded-xl p-6">
              <h3 class="text-lg font-bold text-white mb-4">Award Details</h3>
              <div class="space-y-4">
                <div>
                  <div class="text-sm text-gray-400">Organization</div>
                  <div class="text-white font-medium"><%= @award[:organization] %></div>
                </div>
                <div>
                  <div class="text-sm text-gray-400">Date Awarded</div>
                  <div class="text-white font-medium"><%= @award[:date] %></div>
                </div>
                <div>
                  <div class="text-sm text-gray-400">Location</div>
                  <div class="text-white font-medium"><%= @award[:location] %></div>
                </div>
                <div>
                  <div class="text-sm text-gray-400">Category</div>
                  <div class="text-<%= @award[:color] %>-400 font-medium"><%= @award[:category] %></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Related Awards -->
  <section class="py-20 border-t border-gray-800">
    <div class="container mx-auto px-6">
      <div class="max-w-6xl mx-auto">
        <h2 class="text-3xl font-bold text-white text-center mb-12">Other Recognitions</h2>
        
        <div class="text-center">
          <a href="/awards" class="inline-flex items-center px-8 py-4 bg-<%= @award[:color] %>-600 hover:bg-<%= @award[:color] %>-700 text-white font-medium rounded-xl transition-colors">
            View All Awards
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>
</div>