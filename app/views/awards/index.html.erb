<div class="min-h-screen bg-gray-900">
  <!-- Header Section -->
  <section class="relative py-20 overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-yellow-900/20 via-orange-900/20 to-red-900/20"></div>
    <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-black/40"></div>
    
    <div class="container mx-auto px-6 relative z-10">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-5xl lg:text-6xl font-bold text-white mb-6">Awards & Recognition</h1>
        <p class="text-xl text-gray-300 leading-relaxed">
          Celebrating excellence in AI innovation and educational technology
        </p>
      </div>
    </div>
  </section>

  <!-- Awards Grid -->
  <section class="py-20">
    <div class="container mx-auto px-6">
      <div class="max-w-6xl mx-auto">
        <div class="grid lg:grid-cols-2 gap-8">
          <% @awards.each do |award| %>
            <a href="/awards/<%= award[:id] %>" class="award-showcase-card group">
              <div class="award-card-glow"></div>
              <div class="award-card-content">
                <div class="award-icon-large">
                  <span class="text-6xl"><%= award[:icon] %></span>
                </div>
                
                <div class="award-details">
                  <div class="award-category">
                    <%= award[:category] %>
                  </div>
                  
                  <h3 class="award-title"><%= award[:title] %></h3>
                  
                  <div class="award-organization">
                    <span class="org-name"><%= award[:organization] %></span>
                    <span class="award-date"><%= award[:date] %></span>
                  </div>
                  
                  <p class="award-description"><%= award[:description] %></p>
                  
                  <div class="award-view-more">
                    View Award Details â†’
                  </div>
                </div>
              </div>
            </a>
          <% end %>
        </div>
      </div>
    </div>
  </section>

  <!-- Achievement Stats -->
  <section class="py-20 border-t border-gray-800">
    <div class="container mx-auto px-6">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl font-bold text-white text-center mb-12">Achievement Summary</h2>
        
        <div class="grid grid-cols-2 lg:grid-cols-4 gap-8">
          <div class="text-center">
            <div class="text-4xl font-bold text-yellow-400 mb-2">8</div>
            <div class="text-gray-400">Major Awards</div>
          </div>
          <div class="text-center">
            <div class="text-4xl font-bold text-orange-400 mb-2">15</div>
            <div class="text-gray-400">Recognitions</div>
          </div>
          <div class="text-center">
            <div class="text-4xl font-bold text-red-400 mb-2">3</div>
            <div class="text-gray-400">Industry Firsts</div>
          </div>
          <div class="text-center">
            <div class="text-4xl font-bold text-purple-400 mb-2">2025</div>
            <div class="text-gray-400">Breakthrough Year</div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>